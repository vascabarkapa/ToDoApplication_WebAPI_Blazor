@page "/todoItems"
@inject ITodoItemService TodoItemService

<PageTitle>To Do Items</PageTitle>

<h3>TodoItems</h3>

<table class="table" width="100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Date
            </th>
            <th>
                Priority
            </th>
            <th>
                Done
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todoItem in TodoItemService.TodoItems)
        {
            <tr>
                <td>
                    @todoItem.Name
                </td>
                <td>
                    @todoItem.Description
                </td>
                <td>
                    @todoItem.DateAndTime
                </td>
                <td>
                    @todoItem.Priority
                </td>
                <td>
                    @todoItem.isDone
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-dark mx-2 text-center">
                            <i class="bi bi-pencil-square"></i> &nbsp; Edit
                        </a>
                        <a class="btn btn-danger mx-2 text-center">
                            <i class="bi bi-trash"></i> &nbsp; Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    protected override async Task OnInitializedAsync()
    {
        await TodoItemService.GetTodoItems();
    }
}
